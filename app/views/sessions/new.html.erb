<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>
  
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br><%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "Login"%>
  </div>
<% end %>

<%= link_to 'Back', users_path %>